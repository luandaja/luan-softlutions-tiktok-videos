{
	"compilerOptions": {
		"target": "ES2018",
		"module": "commonjs",
		"jsx": "react-jsx",
		"outDir": "./dist",
		"strict": true,
		"noEmit": true,
		"lib": ["es2015"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["./src/components/*"],
			"@compositions/*": ["./src/compositions/*"],
			"@custom-types/*": ["./src/types/*"],
			"@custom-types": ["./src/types"]
		}
	},
	"include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
